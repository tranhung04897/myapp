<div class="container">

  <!-- Outer Row -->
  <div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
              <!-- Nested Row within Card Body -->
              <div class="row">
                  <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                  <div class="col-lg-6">
                      <div class="p-5">
                          <div class="text-center">
                              <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                          </div>
                          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'user') do |f| %>
                            <%= render 'layouts/error_messages', model: f.object %>

                            <div class="form-group">
                              <%= f.text_field :login_id, autofocus: true, class: 'form-control form-control-user' %>
                            </div>
                            <div class="form-group">
                              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-user' %>
                            </div>
                            <% if devise_mapping.rememberable? %>
                              <div class="form-group">
                                <div class="custom-control custom-checkbox small">
                                  <%= f.check_box :remember_me, class: "custom-control-input" %>
                                  <%= f.label :remember_me, class: 'custom-control-label' %>
                                </div>
                              </div>
                            <% end %>
                            <%= f.submit "Log in", class: "btn btn-primary btn-user btn-block" %>
                          <% end %>
                      </div>
                  </div>
              </div>
          </div>
      </div>

    </div>

  </div>

</div>

